<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/settings_activity_parent_view"
    tools:context="com.justchill.android.learnachord.settings.SettingsActivity"
    android:background="@color/settingsBackground">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/sliding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="fixed"
        app:tabTextColor="@color/darkTextColor"
        app:tabSelectedTextColor="@color/settingsTabSelectedColor"
        app:tabIndicatorColor="@color/settingsTabIndicatorColor"
        android:background="@color/TabLayoutBackground"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>