<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settingsBackground"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/settings_title_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="@string/settings_intervals"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/settings_title_text_size" />

        <CheckBox
            android:id="@+id/all_intervals_check"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/settings_check_box_margin_left"
            android:layout_marginRight="@dimen/settings_check_box_margin_right"
            android:buttonTint="@color/optionsCheckBoxTint"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center" />

    </LinearLayout>

    <ListView
        android:id="@+id/settings_interval_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/optionsListViewDivider"
        android:dividerHeight="1dp"/>

</LinearLayout>