<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="settingsTextStyle">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="settingsSecondTextStyle">
        <item name="android:textColor">@color/darkTextColor</item>

        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:text">@string/second</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="chordTextStyle">
        <item name="android:textColor">@color/darkTextColor</item>
    </style>

    <style name="quizModeTwoChordTextStyle">
        <item name="android:textColor">@color/darkTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="quizChooseModeButtonStyle">
        <item name="android:elevation" tools:ignore="NewApi">2dp</item>
        <item name="android:layout_margin">4dp</item>

        <item name="android:ambientShadowAlpha" tools:ignore="NewApi">1</item>
        <item name="android:spotShadowAlpha" tools:ignore="NewApi">1</item>
    </style>

</resources>
